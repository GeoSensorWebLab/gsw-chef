#!/bin/bash

DLOG="<%= @logdir %>/download.log"
ULOG="<%= @logdir %>/upload.log"
STATIONS=$1

touch "$DLOG"
touch "$ULOG"
cd "<%= @workdir %>"

for station in $STATIONS; do
  ruby <%= @prefix %>/transload get observations --source environment_canada \
    --station $station --cache . | tee -a $DLOG
  ruby <%= @prefix %>/transload put observations --source environment_canada \
    --station $station --cache . --date latest \
    --destination "<%= @sta_endpoint %>" | tee -a $ULOG
done
