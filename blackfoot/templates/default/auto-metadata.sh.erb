#!/bin/bash

DLOG="<%= @logdir %>/download.log"
ULOG="<%= @logdir %>/upload.log"
STATIONS=$(cat -)

touch "$DLOG"
touch "$ULOG"
cd "<%= @workdir %>"

for station in $STATIONS; do
  ruby transload get metadata --source environment_canada \
    --station $station --cache <%= @cachedir %> | tee -a $DLOG
  ruby transload put metadata --source environment_canada \
    --station $station --cache <%= @cachedir %> \
    --destination "<%= @sta_endpoint %>" | tee -a $ULOG
done
