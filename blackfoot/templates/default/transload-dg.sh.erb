#!/bin/bash

DLOG="<%= @logdir %>/download.log"
ULOG="<%= @logdir %>/upload.log"

touch "$DLOG"
touch "$ULOG"
cd "<%= @workdir %>"

<% for stn in @stations%>
ruby transload get observations \
  --source data_garrison \
  --user <%= stn["user_id"] %> \
  --station <%= stn["station_id"] %> \
  --cache <%= @cachedir %> | tee -a $DLOG
ruby transload put observations \
  --source data_garrison \
  --user <%= stn["user_id"] %> \
  --station <%= stn["station_id"] %> \
  --cache <%= @cachedir %> \
  --date latest \
  --destination "<%= @sta_endpoint %>" | tee -a $ULOG

<% end %>
