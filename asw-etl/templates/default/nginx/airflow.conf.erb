server {
        listen 80 default_server;
        listen [::]:80 default_server;
        server_name _;
        
        index index.html index.htm index.nginx-debian.html;

        location / {
                auth_basic "Apache Airflow Administration";
                <% if @ht_file -%>
                auth_basic_user_file <%= @ht_file %>;
                <% end -%>
                proxy_pass http://127.0.0.1:<%= @port %>;
                port_in_redirect off;
        }
}
